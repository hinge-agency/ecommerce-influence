<section class="categories constrain">

    <h3 class="categories__title">Categories to Explore</h3>

    <ul class="categories__list">
        {% for tag in site_settings.tags %}
            {% set term = post_obj.getTerm(tag.term_id) %}
            <li class="categories__item {{ title == term.name ? 'active' : '' }}">
                <a href="{{ term.link }}" rel="noopener" class="categories__category">{{ term }}</a>
                {% set posts_count = post_obj.getPostsFromTagCount(term.slug) %}
                <div class="categories__count">({{ posts_count }})</div>
            </li>
        {% endfor %}
    </ul>

</section>
