<section class="topDripForm">
	<div class="topDripForm__inner">

		<div class="topDripForm__closeButton">
			
			<div class="topDripForm__closeButton-wrapper">
				<span class="topDripForm__closeButton-line topDripForm__closeButton-line--lineOne"></span>
				<span class="topDripForm__closeButton-line topDripForm__closeButton-line--lineTwo"></span>
			</div>

		</div><!-- CLOSE BUTTON END -->

			<div class="topDripForm__content desktop-image"
				 style="background-image: url('{{site_settings.ss_popup_form_desktop_image['url']}}');">
				<img src="{{site_settings.ss_popup_form_tablet_image['url']}}" alt="" class="tablet-image">
				<div data-drip-attribute="headline" class="topDripForm__content-title">{{ site_settings.ss_popup_form_title }}</div>
				<div data-drip-attribute="description" class="topDripForm__content-text">{{ site_settings.ss_popup_form_text ? site_settings.ss_popup_form_text }}</div>
				<div class="topDripForm__content-formContainer">

					<form action="https://www.getdrip.com/forms/10754076/submissions" method="post" data-drip-embedded-form="10754076" class="topDripForm__form">

						<div class="topDripForm__form-block">
							<label for="drip-First-Name" class="topDripForm__form-block-label">{{ site_settings.ss_popup_form_name_field }}</label>
							<input type="text" id="drip-First-Name" name="fields[First_Name]" value="" class="topDripForm__form-block-input" placeholder="{{ site_settings.ss_popup_form_name_placeholder }}">
						</div><!--
						--><div class="topDripForm__form-block">
							<label for="drip-email" class="topDripForm__form-block-label">{{ site_settings.ss_popup_form_email_field }}</label>
							<input type="email" id="drip-email" name="fields[email]" value="" class="topDripForm__form-block-input topDripForm__form-block-input--email" placeholder="{{ site_settings.ss_popup_form_email_placeholder }}">
						</div><!--
						--><div class="topDripForm__form-block topDripForm__form-block--button">
							<div class="topDripForm__form-block-button">{{ site_settings.ss_popup_form_button_text }}</div>
						</div>

						<div class="topDripForm__form-errors">Please enter a valid name and email</div>

					</form>

				</div>
			</div><!-- CONTENT END -->

	</div> <!-- INNER END -->
</section> <!-- TOP DRIP FORM END -->