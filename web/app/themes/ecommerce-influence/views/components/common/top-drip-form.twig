<section class="topDripForm">
	<div class="topDripForm__inner">

		<div class="topDripForm__closeButton">
			
			<div class="topDripForm__closeButton-wrapper">
				<span class="topDripForm__closeButton-line topDripForm__closeButton-line--lineOne"></span>
				<span class="topDripForm__closeButton-line topDripForm__closeButton-line--lineTwo"></span>
			</div>

		</div><!-- CLOSE BUTTON END -->
		
		<div class="topDripForm__content">
			
			<div data-drip-attribute="headline" class="topDripForm__content-title">{{ site_settings.ss_popup_form_title }}</div>
			<div data-drip-attribute="description" class="topDripForm__content-text">{{ site_settings.ss_popup_form_text ? site_settings.ss_popup_form_text }}</div>
			<div class="topDripForm__content-formContainer">

				<form action="https://www.getdrip.com/forms/10754076/submissions" method="post" data-drip-embedded-form="10754076" class="topDripForm__form">
					
					<div class="topDripForm__form-block">
						<label for="drip-First-Name" class="topDripForm__form-block-label">First name</label>
						<input type="text" id="drip-First-Name" name="fields[First_Name]" value="" class="topDripForm__form-block-input" placeholder="Joe">
					</div><!--
					--><div class="topDripForm__form-block">
						<label for="drip-email" class="topDripForm__form-block-label">Email address</label>
						<input type="email" id="drip-email" name="fields[email]" value="" class="topDripForm__form-block-input topDripForm__form-block-input--email" placeholder="your@email.com">
					</div><!--
					--><div class="topDripForm__form-block topDripForm__form-block--button">
						<input type="submit" name="submit" value="Sign Up" data-drip-attribute="sign-up-button" class="topDripForm__form-block-button">
					</div>

				</form>

			</div>

		</div><!-- CONTENT END -->

	</div> <!-- INNER END -->
</section> <!-- TOP DRIP FORM END -->